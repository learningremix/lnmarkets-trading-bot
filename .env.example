# Database
DATABASE_URL=postgresql://postgres:tradingbot@localhost:5432/lnmarkets_bot

# LN Markets API (get from https://lnmarkets.com/en/user/api)
LNMARKETS_KEY=your_api_key
LNMARKETS_SECRET=your_api_secret
LNMARKETS_PASSPHRASE=your_api_passphrase
LNMARKETS_NETWORK=mainnet  # mainnet or testnet

# Trading Configuration
AUTO_START_SWARM=false          # Auto-start trading agents on server start
AUTO_EXECUTE_TRADES=false       # ⚠️ Enable automatic trade execution (be careful!)
MIN_TRADE_CONFIDENCE=70         # Minimum confidence score to execute trades (0-100)
MAX_OPEN_POSITIONS=3            # Maximum concurrent positions

# Risk Management
MAX_POSITION_SIZE_PERCENT=10    # Max % of balance per position
MAX_EXPOSURE_PERCENT=50         # Max % of balance in all positions
MAX_LEVERAGE=25                 # Maximum leverage allowed
DEFAULT_STOP_LOSS_PERCENT=5     # Default stop loss percentage
MAX_DAILY_LOSS_PERCENT=10       # Stop trading after this daily loss

# Optional Features
ENABLE_ONCHAIN_METRICS=false    # Enable on-chain data fetching

# Redis (optional, for job queue)
REDIS_URL=redis://localhost:6379
